/* pages/phonelogin/phonelogin.wxss */
page{
  background-color: white;
}

.back-view{
  background-color: white;
  width: 100%;
  height: 100%;
}

.title-view{
  width: 100vw;
  height: 280rpx;
  text-align: center;
  line-height: 280rpx;
  font-size: 56rpx;
  font-weight: 900;
  color: #ffa500;
  font-style: italic;
}

.account-view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  width: 100%;
  /* background-color: blue; */
}

.account-img {
  width: 40rpx;
  height: 50rpx;
  padding-left: 60rpx;
  flex-grow: 0
}

.account-input {
  flex-grow: 1;
  padding-left: 30rpx;
  padding-right: 60prx;
}

.account-line {
  margin-left: 60rpx;
  margin-right: 60rpx;
  height: 2rpx;
  background-color: #f5f5f5;
}

.pswd-view{
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  width: 100%;
  /* background-color: blue; */
}

.pswd-line {
  margin-left: 60rpx;
  margin-right: 60rpx;
  height: 2rpx;
  background-color: #f5f5f5;
}

.login-button{
  /* margin-left: 30rpx;
  margin-right: 30rpx; */
  margin-top: 60rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  border-radius: 50rpx;
  color: white;
}