/* pages/messageinfo/messageinfo/messageinfo.wxss */
page{
  background-color: white;
}

.backview{
  background-color: white;
}

.scroll-page{
  background-color: white;
  height: 100%;
}

.message-view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.user-info{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  width: 100%;
  
}

.img-avator {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #f5f5f5;
}
.name-info{
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.name{
  font-size: 28rpx;
  font-weight: 700rpx;
  color: #222222;
}

.create-tiem{
  font-size: 24rpx;
  color: #999999;
}

.content{
  font-size: 32rpx;
  color: #333333;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.msg-info{
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  background-color: yellow;
}

.topic-img{
  height: 100%;
  width: 160rpx;
  flex-grow: 0;
}

.msg-content{
  background-color: #f5f5f5;
  flex-grow: 1;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  /* margin-left: 20rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx; */
}

.tag-content{
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
  justify-content: flex-start;
  flex-grow: 0;
}

.tags {
  background-color: #ffa500;
  width: max-content;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color:white;
}

.text-content{
  flex-grow: 1;
  max-lines: 2;
}

.line-view{
  margin-top: 30rpx;
  height: 2rpx;
  width: 690rpx;
  background-color: #f5f5f5;
  margin-bottom: 20rpx;
}

