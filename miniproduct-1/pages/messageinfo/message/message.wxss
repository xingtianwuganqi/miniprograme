/* pages/message/message.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  background-color: #eeeeee;
}

.content{
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.content-item{
  width: 100%;
  height: 118rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.img-item{
  width: 80rpx;
  height: 80rpx;
  padding-left: 30rpx;
  flex-grow: 0;
}
.text-item{
  text-align: center;
  padding: 20rpx;
  color: #333;
  flex-grow: 0;
  font-size: 32rpx;
}
.empty-view{
  flex-grow: 1;
}
.num-view{
  flex-grow: 0;
  height: 50rpx;
  /* width: 50rpx; */
  padding-left: 12rpx;
  padding-right: 12rpx;
  margin-right: 20rpx;
  border-radius: 25rpx;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 50rpx;
}
.right-icon{
  width: 16rpx;
  height: 25rpx;
  padding-right: 30rpx;
  flex-grow: 0;
}

.line-item{
  background-color: #f5f5f5;
  height: 2rpx;
  bottom: 0rpx;
}

.message-view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height: 80;
  background-color: gray;
}