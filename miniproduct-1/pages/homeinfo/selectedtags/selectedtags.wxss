/* pages/HomeInfo/selectedtags/selectedtags.wxss */
page{
  background-color: white;
}

.tag-content{
  display: flex;
  flex-direction: row;
  width: 100vw;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 30rpx;
}

.tag-unselect{
  background-color: white;
  width: max-content;
  height: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 32rpx;
  border-style: solid;
  border-width: 2rpx;
  border-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #292929;
}

.tag-select{
  background-color: #ffa500;
  width: max-content;
  height: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  color:white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

