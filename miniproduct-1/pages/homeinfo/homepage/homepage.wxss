.searchback {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
}

.searchview{
  background-color: #f5f5f5;
  margin: auto;
  height: 80rpx;
  width: 690rpx;
  border-radius: 40rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.searchtext {
  margin-left: 16rpx;
}
