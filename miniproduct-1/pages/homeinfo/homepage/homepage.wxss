.add-back{
  position: fixed;
  width:100rpx;
  height:100rpx;
  bottom: 50rpx;
  right: 40rpx;
  background-color: #ffa500;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
}

