/* pages/comment/commentpage.wxss */
page{
  background-color: white;
}
.comment-back {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.comment-scroll{
  width: 100%;
  flex-grow: 1;
  background-color: white;
}

.comment-item{
  text-align: center;
}

.input-back {
  flex-grow: 0;
  width: 100%;
  height: 100rpx;
  background-color: #f5f5f5;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.input-view {
  border-radius: 10rpx;
  background-color: white;
  height: 80rpx;
  width: 690rpx;
}

.comment-content{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-right: 30rpx;
}

.user-head .head-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
}

.comment-info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-left: 20rpx;
}

.user-name{
  text-align: start;
  font-size: 28rpx;
  color: #999;
}

.comment-text {
  text-align: start;
  font-size: 32rpx;
  color: #333;
  padding-top: 10rpx;
}

.comment-time {
  text-align: start;
  font-size: 24rpx;
  color: #999999;
  padding-top: 10rpx;
}

.reply-content{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  /* padding-left: 30rpx; */
  padding-top: 30rpx;
}

.reply-head .reply-img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}
.bottom-line {
  margin-top: 20rpx;
  height: 2rpx;
  width: 620rpx;
  background-color: #f5f5f5;
}