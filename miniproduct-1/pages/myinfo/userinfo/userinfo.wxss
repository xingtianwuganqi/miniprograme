/* pages/myinfo/userinfo/userinfo.wxss */

page{
  background-color: white;
}

.back-view{
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
}

.userInfo {
  background-color: #ffa500;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.user-avator{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #f5f5f5;
  margin-left: 30rpx;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border-width: 2;
  border-color: white;
  background-color: #f5f5f5;
}

.nickname {
  font-size: 40rpx;
  font-weight: 700;
  padding-left: 20rpx;
  color: white;
}

.user-cell {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
}

.line-item{
  background-color: #f5f5f5;
  height: 2rpx;
  bottom: 0rpx;
}

.icon-img{
  height: 40rpx;
  width: 40rpx;
  padding-left: 30rpx;
}

.title-view{
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #292929;
}

.empty-view{
  flex-grow: 1;
}
.right-icon{
  width: 16rpx;
  height: 25rpx;
  padding-right: 30rpx;
  flex-grow: 0;
}