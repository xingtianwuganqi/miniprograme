page{
  background-color: white;
}

.back-view{
  background-color: white;
  display: flex;
  flex-direction: column;
}

.title-view{
  font-size: 30rpx;
  color: #333333;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.inputview{
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 400rpx;
  border-width: 1rpx;
  border-color: #f5f5f5;
  border-radius: 10rpx;
  border-style: solid;
}

.text-area {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.contact-view{
  font-size: 30rpx;
  color: #333333;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
}

.contact {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100rpx;
  border-width: 1rpx;
  border-color: #f5f5f5;
  border-radius: 10rpx;
  border-style: solid;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input-text{
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.push-button {
  margin-top: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #ffa500;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 700;
}