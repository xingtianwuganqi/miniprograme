/* pages/login/login.wxss */
page{
  background-color: white;
}
.back-view{
  background-color: white;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.logo-view{
  width: 100vw;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-grow: 0;
}

.logo-image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.login-button{
  /* margin-left: 30rpx;
  margin-right: 30rpx; */
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  border-radius: 50rpx;
  color: white;
}

.agreement-view{
  margin-top: 60rpx;
  color: #999999;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 26rpx;
}

.empty-view{
  flex-grow: 1;
}

.phone-login{
  height: 50rpx;
  color: #ffa500;
  font: 30rpx;
}
