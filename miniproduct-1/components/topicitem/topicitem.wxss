  align-items: flex-start;
}

.img-row-line{
  width: 100%;
  height: 6rpx;
}

.img-coloum-line{
  height: 100%;
  width: 10rpx;
}

.img-show{
  display: block;
  width: 100%;
  height: 100%;
}

.image-three-back{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.image-left {
  background-color: white;
  display: block;
  width: 308rpx;
  height: 383rpx;
}

.image-right{
  background-color: white;
  display: flex;
  flex-direction: column;
  width: 310rpx;
  height: 383rpx;
}

.img-thr-coloum-line{
  width: 6rpx;
  height: 383rpx;
}

.img-thr-row-line{
  width: 310rpx;
  height: 10rpx;
}

.bottom-line{
  background-color: #f5f5f5;
  width: 100vw;
  height: 1rpx;
}


