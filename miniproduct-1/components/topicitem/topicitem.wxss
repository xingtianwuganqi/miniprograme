/* components/topicitem/topicitem.wxss */
.scroll-cell{
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.userInfo{
  display: flex;
  flex-direction: row;
  height: 120rpx;
  width: 100%;
  padding-left: 20rpx;
  align-items: center;
}
.empty-head{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: white;
}
.head-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.userName{
  display: flex;
  flex-direction: column;
  color: #333333;
  font-size: 32rpx;
  padding-left: 20rpx;
  flex-grow: 1;
  align-items: flex-start;
}

.time-item{
  font-size: 24rpx;
  color: #999999;
}

.icon-view{
  width: 60rpx;
  height: 60rpx;
  padding-right: 60rpx;
  flex-grow: 0;
}

.tag-content{
  display: flex;
  flex-direction: row;
  width: 100vw;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-left: 100rpx;
}

.tags {
  background-color: #ffa500;
  width: max-content;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color:white;
}


.content{
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #666666;
  padding-left: 100rpx;
  padding-right: 20rpx;
  text-align: left;
}

.content-text{
    display: -webkit-box;
    -webkit-line-clamp: 7;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.address{
  margin-top: 10rpx;
  font-size: 26.rpx;
  color: #999999;
  padding-left: 100rpx;
  padding-right: 20rpx;
  text-align: left;
}

.interaction{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  width: (750 - 100)rpx;
  padding-left: 100rpx;
  padding-right: 20rpx;
}

.mini-btn{
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  text-align: center;
  width:200rpx;
  color:#777777;
}

